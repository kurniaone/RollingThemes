<h3 class="facebox-title">Author</h3>

<%= form_for ['administrator', @author], :remote => true, :html => {:class => 'form', :multipart => true } do |f| %>
  <%= error_messages(@author).html_safe %>
  <div class="group">
    <%= f.label 'Name', :class => 'label' %>
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
  <div class="group">
    <%= f.label 'email', :class => 'label' %>
    <%= f.email_field :email, :class => 'text_field' %>
  </div>
  <div class="group">
    <%= f.label 'Profile', :class => 'label' %>
    <%= f.cktext_area(:profile, :toolbar => 'AdminSimple') %>
  </div>
  <div class="group">
    <%= f.label 'Avatar', :class => 'label' %>
    <%= f.file_field :avatar %>
  </div>
  <div class="group navform wat-cf">
    <button type="submit" class="button">
      <%= image_tag "tick.png", :alt => "+" %> Save
    </button>
  </div>
<% end %>