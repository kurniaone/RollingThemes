<div class="content">
  <h2>Update Account</h2>

  <div class="inner">
    <%= form_for 'user', :url => update_account_administrator_users_path, :html => {:class => 'form', :method => :put} do |f| %>
      <%= error_messages(@user).html_safe %>

      <div class="field-group">
        <div class="group">
          <%= f.label 'Firstname', :class => 'label' %>
          <%= f.text_field :first_name, :class => 'text_field' %>
        </div>
        <div class="group">
          <%= f.label 'Lastname', :class => 'label' %>
          <%= f.text_field :last_name, :class => 'text_field' %>
        </div>
        <div class="group">
          <%= f.label 'Email', :class => 'label' %>
          <%= f.email_field :email, :class => 'text_field' %>
        </div>
        <div class="group">
          <%= f.label 'Current Password', :class => 'label' %>
          <%= f.password_field :current_password, :class => 'text_field' %>
          <span class="description">Leave blank to keep old password</span>
        </div>
        <div class="group">
          <%= f.label 'New Password', :class => 'label' %>
          <%= f.password_field :password, :class => 'text_field' %>
        </div>
        <div class="group">
          <%= f.label 'New Password confirmation', :class => 'label' %>
          <%= f.password_field :password_confirmation, :class => 'text_field' %>
        </div>
      </div>

      <div class="group navform wat-cf">
        <%= hidden_field_tag :tab, @tab %>
        <button type="submit" class="button">
          <%= image_tag "tick.png", :alt => "+" %> Save
        </button>
      </div>
    <% end %>

  </div>
</div>