<h3 class="facebox-title">Category</h3>

<%= form_for ['administrator', @category], :remote => true, :html => {:class => 'form'} do |f| %>
  <%= error_messages(@category).html_safe %>
  <div class="group">
    <%= f.label 'Name', :class => 'label' %>
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
  <div class="group navform wat-cf">
    <button type="submit" class="button">
      <%= image_tag "tick.png", :alt => "+" %> Save
    </button>
  </div>
<% end %>