<div class="container">
  <div id="header">
    <div id="logo">
      <%= link_to image_tag("maintenance/logo_rt.png"), administrator_root_path %>
    </div><!--end logo-->

    <div id="contact_details">
      <p><a href="mailto:support@rollingthemes.com">support@rollingthemes.com</a></p>
    </div><!--end contact details-->

  </div><!--end header-->
  <div style="clear:both"></div>

  <div id="main">
    <div id="content">

      <div class="text">
        <h2>This website is under construction</h2>
      </div><!--end text-->

      <div class="counter">
        <h3>Estimated Time Remaining Before Launch:</h3>
        <div id="defaultCountdown"></div>

      </div><!--end counter-->

      <div class="details">
        <!--slider prev button-->
        <a class="prev" href="#"><img src="/assets/maintenance/prev.png" alt="" />
        </a>

        <div id="sliderwrap">
          <div id="slidertext"><!-- The slider -->

            <ul>
              <li>
                <h3>Type your email id to get the updates!</h3>
                <form method="post" id="subscribeform" action="#">
                  <div id="email_input">
                    <input name="email" type="text" size="30" value="Enter Your E-mail" onfocus="if(this.value=='Enter Your E-mail'){this.value=''};" 	onblur="if(this.value==''){this.value='Enter Your E-mail'};" id="email" />
                    <input type="submit" id="submit" value="SUBMIT" size="80" />
                  </div>
                </form>
              </li><!-- Slider item -->

              <li>
                <h3>You may find us below:</h3>
                <div class="social">
                  <a href="http://twitter.com/rollingthemes" class="twitter">Follow Us on Twitter</a>
                  <a href="#" class="yahoo">Follow Us on Yahoo</a>
                  <a href="http://facebook.com/rollingthemes" class="facebook">Like Us on Facebook</a>
                  <a href="#" class="stumbleupon">Stumble Us on Stumbleupon</a>
                </div>
              </li><!-- Slider item -->

              <li>
                <h3>Some words about us</h3>
                <p>Rollingthemes is a product under <a href="http://kuyainside.com">Kuyainside Inc.</a> that concentrates on the web and internet.</p>


              </li><!-- Slider item -->

            </ul>

          </div><!-- End of slidertext -->

        </div><!-- End of sliderwrap -->

        <!--slider next button-->
        <a class="next" href="#"><img src="/assets/maintenance/next.png" alt=""/></a>


      </div><!--end details-->
    </div><!--end content-->
    <p class="copyright">Copyright &copy; Rollingthemes 2012. All rights selected</p>
  </div><!--end main-->

</div><!--end class container-->

<%= content_for :stylesheet do %>
  <%= stylesheet_link_tag "maintenance/style.css" %>
<% end %>

<%= content_for :javascript do %>
  <%= javascript_include_tag 'maintenance/jcarousellite1.0.1_min.js', 'maintenance/jquery.countdown.js' %>
  <script type="text/javascript">
    $(function () {
      var austDay = new Date("December 10, 2012 02:15:00");
      $('#defaultCountdown').countdown({until: austDay, layout: '{dn} {dl}, {hn} {hl}, {mn} {ml}, and {sn} {sl}'});
      $('#year').text(austDay.getFullYear());
    });
  </script>
<% end %>

